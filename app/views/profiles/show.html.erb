<div class="profile-container">
  <div class="profile-header">
    <h1><%= @profile.name %></h1>
    <p><%= @profile.title %></p>
  </div>

  <% if @profile.avatar.attached? %>
    <%= image_tag url_for(@profile.avatar), style: "width: 200px; height: auto;" %>
  <% else %>
    <p>No avatar uploaded yet.</p>
  <% end %>
  <%= form_with(model: @profile, local: true, html: { multipart: true }) do |form| %>
    <div>
      <%= form.label :avatar, "Upload Avatar" %>
      <%= form.file_field :avatar %>
    </div>

    <div>
      <%= form.submit "Update Profile" %>
    </div>
  <% end %>

  <div class="profile-bio"><p><%= @profile.bio %></p></div>

  <div class="profile-skills">
    <h2>Skills</h2>
    <ul>
      <li>Ruby on Rails</li>
      <li>JavaScript</li>
      <li>React</li>
      <li>PostgreSQL</li>
      <li>HTML</li>
      <li>CSS</li>
    </ul>
  </div>

  <div class="profile-social">
    <h2>Social Media</h2>
    <ul>
      <li><a href="#"><i class="fab fa-github"></i></a></li>
      <li><a href="#"><i class="fab fa-linkedin"></i></a></li>
      <li><a href="#"><i class="fab fa-twitter"></i></a></li>
    </ul>
  </div>
</div>
