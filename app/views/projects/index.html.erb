<div class="project-grid">
  <% @projects.each do |project| %>
    <%= link_to project_path(project) do %>
      <div class="project-item">
        <% if project.image.present? %>
          <%= image_tag project.image, alt: project.title %>
        <% end %>
        <h2><%= project.title %></h2>
        <p><%= project.description %></p>
        <% if project.live_link.present? %>
          <a href="<%= project.live_link %>" target="_blank">Live Demo</a>
        <% end %>
        <% if project.source_code_link.present? %>
          <a href="<%= project.source_code_link %>" target="_blank">Source Code</a>
        <% end %>
        <%= link_to "Edit", edit_project_path(project) %>
      </div>
    <% end %>
  <% end %>
  <%= link_to "Add New Project", new_project_path %>
</div>
